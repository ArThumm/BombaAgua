<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #2a2a2a;">
        <VBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 20 10 20 10;">
            <!-- Logo or Title could go here -->
            
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="New Project" style="-fx-background-color: #3a3a3a; -fx-text-fill: white;">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Button>
            
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Open Project" style="-fx-background-color: #3a3a3a; -fx-text-fill: white;">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Button>
            
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Options" style="-fx-background-color: #3a3a3a; -fx-text-fill: white;">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Button>
            
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="My Account" style="-fx-background-color: #3a3a3a; -fx-text-fill: white;">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Button>
            
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Help" style="-fx-background-color: #3a3a3a; -fx-text-fill: white;">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Button>
        </VBox>
    </AnchorPane>
</VBox>